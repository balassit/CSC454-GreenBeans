<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.blake.greenbeans.MainActivity"
    android:fillViewport="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/toolbar"
        android:background="@color/GreenBean"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/my_toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:isScrollContainer="true"
            android:id="@+id/RelativeLayout">
            <TextView
                android:text="@string/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous_step"
                android:layout_below="@id/previous"
                android:textSize="18sp" />
            <TextView
                android:text="@string/current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current"
                android:layout_below="@+id/previous_step"
                android:layout_marginTop="40dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_step"
                android:layout_below="@id/current"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@+id/current_step"
                android:textSize="24sp" />

            <TextView
                android:text="Next:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:layout_below= "@+id/timer"
                android:gravity="bottom"
                android:layout_marginTop="40dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_step"
                android:layout_below= "@+id/next"
                android:gravity="bottom"
                android:textSize="18sp" />

        </RelativeLayout>


    </ScrollView>

    <Button
        android:text="@string/start_meal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextStep"
        style="@style/Widget.AppCompat.Button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

</RelativeLayout>
